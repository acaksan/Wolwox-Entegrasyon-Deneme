        // Kategori ağacını oluştur
        function createCategoryTree(categories, treeElement, type) {
            treeElement.innerHTML = '';
            
            categories.forEach(category => {
                const li = document.createElement('li');
                li.className = 'mb-2';
                
                const div = document.createElement('div');
                div.className = 'd-flex align-items-center';
                
                const radio = document.createElement('input');
                radio.type = 'radio';
                radio.name = type === 'wolvox' ? 'wolvoxCategory' : 'wooCategory';
                radio.value = category.id;
                radio.className = 'form-check-input me-2';
                
                const label = document.createElement('span');
                label.textContent = category.name;
                
                div.appendChild(radio);
                div.appendChild(label);
                
                if (type === 'woo') {
                    const btnGroup = document.createElement('div');
                    btnGroup.className = 'btn-group btn-group-sm ms-auto';
                    
                    const editBtn = document.createElement('button');
                    editBtn.className = 'btn btn-outline-primary';
                    editBtn.innerHTML = '<i class="fas fa-edit"></i>';
                    editBtn.onclick = () => editWooCategory(category);
                    
                    const deleteBtn = document.createElement('button');
                    deleteBtn.className = 'btn btn-outline-danger';
                    deleteBtn.innerHTML = '<i class="fas fa-trash"></i>';
                    deleteBtn.onclick = () => deleteWooCategory(category.id);
                    
                    btnGroup.appendChild(editBtn);
                    btnGroup.appendChild(deleteBtn);
                    div.appendChild(btnGroup);
                }
                
                li.appendChild(div);
                
                if (category.subcategories && category.subcategories.length > 0) {
                    const ul = document.createElement('ul');
                    ul.className = 'list-unstyled ms-4 mt-2';
                    createCategoryTree(category.subcategories, ul, type);
                    li.appendChild(ul);
                }
                
                treeElement.appendChild(li);
            });
        }
        
        // Kategorileri yükle
        async function loadCategories() {
            try {
                // Wolvox kategorilerini yükle
                const wolvoxResponse = await fetch('/api/categories/wolvox');
                const wolvoxCategories = await wolvoxResponse.json();
                createCategoryTree(wolvoxCategories, document.getElementById('wolvoxCategoryTree'), 'wolvox');
                
                // WooCommerce kategorilerini yükle
                const wooResponse = await fetch('/api/categories/woocommerce');
                const wooCategories = await wooResponse.json();
                createCategoryTree(wooCategories, document.getElementById('wooCategoryTree'), 'woo');
                
                // Üst kategori seçimini güncelle
                updateParentSelect(wooCategories);
                
                // Eşleştirmeleri yükle
                const mappingResponse = await fetch('/api/categories/mapping');
                const mappings = await mappingResponse.json();
                updateMappingTable(mappings);
            } catch (error) {
                console.error('Kategoriler yüklenirken hata:', error);
                alert('Kategoriler yüklenirken bir hata oluştu.');
            }
        }
        
        // Eşleştirme tablosunu güncelle
        function updateMappingTable(mappings) {
            const tbody = document.getElementById('categoryMappingTable');
            tbody.innerHTML = '';
            
            mappings.forEach(mapping => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${mapping.wolvoxCategory}</td>
                    <td>${mapping.wooCategory}</td>
                    <td>
                        <button class="btn btn-sm btn-danger" onclick="deleteMapping(${mapping.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(tr);
            });
        }
        
        // Üst kategori seçimini güncelle
        function updateParentSelect(categories, parentSelect = document.getElementById('categoryParent')) {
            parentSelect.innerHTML = '<option value="0">Ana Kategori</option>';
            
            function addOptions(cats, level = 0) {
                cats.forEach(category => {
                    const option = document.createElement('option');
                    option.value = category.id;
                    option.textContent = '  '.repeat(level) + category.name;
                    parentSelect.appendChild(option);
                    
                    if (category.subcategories && category.subcategories.length > 0) {
                        addOptions(category.subcategories, level + 1);
                    }
                });
            }
            
            addOptions(categories);
        }
        
        // WooCommerce kategorisini düzenle
        function editWooCategory(category) {
            // TODO: Düzenleme modalını göster
            console.log('Düzenlenecek kategori:', category);
        }
        
        // WooCommerce kategorisini sil
        async function deleteWooCategory(categoryId) {
            if (!confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/categories/woocommerce/${categoryId}`, {
                    method: 'DELETE'
                });
                
                if (!response.ok) {
                    throw new Error('Kategori silinemedi');
                }
                
                await loadCategories();
            } catch (error) {
                console.error('Kategori silinirken hata:', error);
                alert('Kategori silinirken bir hata oluştu.');
            }
        }
        
        // Kategori eşleştirmesi yap
        document.getElementById('mapCategories').addEventListener('click', async function() {
            const wolvoxSelected = document.querySelector('#wolvoxCategoryTree input:checked');
            const wooSelected = document.querySelector('#wooCategoryTree input:checked');
            
            if (!wolvoxSelected || !wooSelected) {
                alert('Lütfen her iki taraftan da bir kategori seçin.');
                return;
            }
            
            try {
                const response = await fetch('/api/categories/mapping', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        wolvoxCategoryId: wolvoxSelected.value,
                        wooCategoryId: wooSelected.value
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Eşleştirme oluşturulamadı');
                }
                
                await loadCategories();
            } catch (error) {
                console.error('Eşleştirme yapılırken hata:', error);
                alert('Eşleştirme yapılırken bir hata oluştu.');
            }
        });
        
        // Eşleştirmeyi kaldır
        async function deleteMapping(mappingId) {
            if (!confirm('Bu eşleştirmeyi kaldırmak istediğinizden emin misiniz?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/categories/mapping/${mappingId}`, {
                    method: 'DELETE'
                });
                
                if (!response.ok) {
                    throw new Error('Eşleştirme kaldırılamadı');
                }
                
                await loadCategories();
            } catch (error) {
                console.error('Eşleştirme kaldırılırken hata:', error);
                alert('Eşleştirme kaldırılırken bir hata oluştu.');
            }
        }
        
        // Yeni kategori kaydet
        document.getElementById('saveNewCategory').addEventListener('click', async function() {
            const form = document.getElementById('newWooCategoryForm');
            
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const data = {
                name: document.getElementById('categoryName').value,
                slug: document.getElementById('categorySlug').value || undefined,
                parent: parseInt(document.getElementById('categoryParent').value),
                description: document.getElementById('categoryDescription').value
            };
            
            try {
                const response = await fetch('/api/categories/woocommerce', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                if (!response.ok) {
                    throw new Error('Kategori oluşturulamadı');
                }
                
                bootstrap.Modal.getInstance(document.getElementById('newWooCategoryModal')).hide();
                form.reset();
                await loadCategories();
            } catch (error) {
                console.error('Kategori oluşturulurken hata:', error);
                alert('Kategori oluşturulurken bir hata oluştu.');
            }
        });
    </script>
